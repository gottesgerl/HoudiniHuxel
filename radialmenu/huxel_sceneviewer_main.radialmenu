	"type":"script_submenu",
	"script":"########################################################\n#\n#       huxel sceneviewer main\n#\n#       handles basic radialmenus in the viewport\n#\n#######################################################     \n\nimport huxelradialmenus.commontools as commontools\nimport huxelradialmenus.sceneviewer.sceneviewertools as viewertools\n\nverbose = 0\nmax_cams = 1\n\nslots = ( \"n\", \"nw\", \"ne\", \"e\", \"w\", \"sw\", \"s\", \"se\",)\nshortcuts = commontools.shortcutMap()\nkwargs = commontools.paneinfo()\ncamera = hou.node(kwargs['camera_path'])\n\n# NORTH -- \"Cameras\" ---------------------------------------------\nmenu = {}\ncams = viewertools.getCameras(kwargs)\nfor slot, cam in zip(slots, cams[:max_cams]):\n    kwargs[\"cam\"] = cam.path()\n    # Lock Camera\n    if cam == camera and cam:\n        cmd = (\"viewertools.lockCameraViewToggle(**%s)\" %kwargs)\n        menu[slot] = {\n            \"type\": \"script_action\",\n            \"label\": (\"UN|LOCK %s\" %cam.name()),\n            \"icon\": cam.type().icon(),\n            \"script\": cmd,\n            \"shortcut\": shortcuts[slot]            }            \n    else:\n        cmd = (\"viewertools.lookThroughCamera(**%s)\" %kwargs)        \n        menu[slot] = {\n            \"type\": \"script_action\",\n            \"label\": cam.name(),\n            \"icon\": cam.type().icon(),\n            \"script\": cmd,\n            \"shortcut\": shortcuts[slot]            }\n\n# \"New Camera\" to next open field\nif len(cams) < max_cams:\n    cmd = (\"viewertools.newCamera(%s)\" %(kwargs))\n    menu[slots[len(cams)]] = {\n            \"type\": \"script_action\",\n            \"label\": \"New Camera\",\n            \"icon\": \"OBJ_camera\",\n            \"script\": cmd,\n            \"shortcut\": shortcuts[slots[len(cams)]]              }\n\n            \n# WEST -- \"Display Settings Submenu\" ----------------------------\nmenu[\"w\"] = {\n    \"type\": \"link\",\n    \"label\": \"Display Settings\",\n    \"icon\": \"TOOLS_select_visible\",\n    \"name\": \"huxel_sceneviewer_settings\",\n    \"shortcut\": \"A\"\n    }   \n    \n# EAST -- \"Create\" -----------------------------------------------\n\nmenu[\"e\"] = {\n    \"type\": \"link\",\n    \"label\": \"Create\",\n    \"icon\": \"OBJ_light_point\",\n    \"name\": \"huxel_sceneviewer_create\",\n    \"shortcut\": \"D\"\n    } \n    \n# EAST -- \"Lights\" ---Scripted Submenu Example--------------------\n#submenu = (\"viewertools.lightsSubmenu(**%s)\" %(kwargs))\n#menu[\"e\"] = {\n#    \"type\": \"script_submenu\",\n#    \"label\": \"Lights\",\n#    \"icon\": \"OBJ_light_point\",\n#    \"script\": submenu,\n#    \"shortcut\": \"D\"\n#    } \n\n\n\n\n# SOUTH -- \"Selection\"  ------------------------------------------\ncmd = (\"viewertools.selectionToogle(**%s)\" %kwargs) \nmenu[\"s\"] = {\n    \"type\": \"script_action\",\n    \"label\": \"Select\",\n    \"icon\": \"SCENEGRAPH_selectable_on\",\n    \"script\": cmd,  \n    \"shortcut\": \"X\"\n    }\n\n\nradialmenu.setRadialMenu(menu)\n"
}
